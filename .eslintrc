{
  "extends": ["eslint-config-synacor", "prettier", "prettier/react"],
  "root": true,
  "rules": {
    "react/jsx-no-comment-textnodes": 0,
    "react/no-unknown-property": [
      2,
      {
        "ignore": ["class"]
      }
    ],
    "react/sort-comp": [
      2,
      {
        "order": [
          "properties",
          "constructor",
          "static-methods",
          "everything-else",
          "/^(on|handle).+$/",
          "lifecycle",
          "render"
        ]
      }
    ]
  }
}
